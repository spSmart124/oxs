{
  "author": "Sribatsa Pradhan",
  "name": "VFL",
  "description": "Vocal for local project",
  "version": "2.0",
  "manifest_version": 3,
  "icons": {
    "16": "image/vfl_icon_16.png",
    "32": "image/vfl_icon_32.png",
    "48": "image/vfl_icon_48.png",
    "128": "image/vfl_icon_128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "image/vfl_icon_48.png"
  },
  "host_permissions": [
    "https://*.force.com/*",
    "https://*.salesforce.com/*",
    "http://localhost:8080/*"
  ],
  "permissions": ["contextMenus", "activeTab", "tabs", "cookies"],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; img-src 'self' https://www.informatica.com; connect-src 'self' https://*.salesforce.com http://localhost:8080; style-src 'unsafe-inline' 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "image/vfl_icon_16.png",
        "image/vfl_icon_32.png",
        "image/vfl_icon_48.png",
        "image/vfl_icon_128.png"
      ],
      "matches": ["https://*/*"]
    }
  ]
}
